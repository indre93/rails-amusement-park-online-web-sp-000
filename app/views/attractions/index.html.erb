<h1>Listing attractions</h1>

<table class="table", { box-sizing: border-box }>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tickets</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{attraction.name}", attraction %></td>
        <% else %>
          <td><%= link_to "Go on #{attraction.name}", attraction %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Attraction", new_attraction_path %>
